{
  "extends": "erb",
  "plugins": ["no-only-tests"],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "configs/webpack.config.eslint.js"
      }
    }
  },
  "env": {
    "jest": true
  },
  "rules": {
    "no-only-tests/no-only-tests": "error",
    "react/require-default-props": "off",
    "func-names": "off",
    "flowtype/generic-spacing": "off",
    "react/jsx-props-no-spreading": "off",
    "no-multi-str": "off"
  }
}
